{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
